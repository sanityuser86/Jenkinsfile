pipeline{
 
    agent any
    
    stages{
 
        stage('Build application'){
            steps{
               echo 'Building the application ..'
            }
        }
        
        stage('Test application'){
            steps{
               echo 'Testing the application ..'
            }
        }
    
        stage('Deploy application'){
            steps{
               echo 'Deploying the application ..'
            }
        }
    
    }
 
 }
